<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
  	   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  	   http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">
       
       <context:component-scan base-package="com.rays.ioc2"/>
       
       <bean name="payment" class="com.rays.ioc2.Payment"/>
       <bean name="car" class="com.rays.ioc2.Car"/>
       
       <bean name="order2" class="com.rays.ioc2.Order2">
       <constructor-arg  ref="payment"/>
       <constructor-arg ref="car"/>
       </bean>
       
       </beans>